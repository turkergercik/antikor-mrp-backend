{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Customer orders for products"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "recipe": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::recipe.recipe"
    },
    "customerName": {
      "type": "string",
      "required": true
    },
    "orderNumber": {
      "type": "string",
      "unique": true
    },
    "customerContact": {
      "type": "string"
    },
    "quantity": {
      "type": "decimal",
      "required": true
    },
    "profitMargin": {
      "type": "decimal",
      "default": 0
    },
    "packagingEnabled": {
      "type": "boolean",
      "default": false
    },
    "packagingCost": {
      "type": "decimal",
      "default": 0
    },
    "packagingBreakdown": {
      "type": "json"
    },
    "totalCost": {
      "type": "decimal",
      "default": 0
    },
    "totalSellingPrice": {
      "type": "decimal",
      "default": 0
    },
    "totalProfit": {
      "type": "decimal",
      "default": 0
    },
    "orderDate": {
      "type": "datetime",
      "required": true
    },
    "orderStatus": {
      "type": "enumeration",
      "enum": ["pending", "approved", "planned", "ready", "shipped", "cancelled"],
      "default": "pending",
      "required": true
    },
    "cancelledAt": {
      "type": "datetime"
    },
    "cancelledBy": {
      "type": "string"
    },
    "cancellationReason": {
      "type": "text"
    },
    "orderCreatedBy": {
      "type": "string"
    },
    "notes": {
      "type": "text"
    },
    "readyAt": {
      "type": "datetime"
    },
    "readyBy": {
      "type": "string"
    },
    "shippedAt": {
      "type": "datetime"
    },
    "shippedBy": {
      "type": "string"
    },
    "cargoCompany": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::cargo-company.cargo-company"
    },
    "trackingNumber": {
      "type": "string"
    },
    "shipmentStatus": {
      "type": "enumeration",
      "enum": ["yolda", "dagitimda", "teslim_edildi", "bulunamadi"],
      "default": "yolda"
    },
    "lotAllocations": {
      "type": "json"
    },
    "lotsAllocatedBy": {
      "type": "string"
    },
    "lotsAllocatedAt": {
      "type": "datetime"
    },
    "manualLotSelection": {
      "type": "json"
    },
    "lots": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::lot.lot"
    },
    "requestedDeliveryDate": {
      "type": "date",
      "required": true
    },
    "confirmedDeliveryDate": {
      "type": "date"
    },
    "deliveryDateStatus": {
      "type": "enumeration",
      "enum": ["pending_confirmation", "confirmed", "date_changed", "approved", "rejected"],
      "default": "pending_confirmation"
    },
    "deliveryDateConfirmedBy": {
      "type": "string"
    },
    "deliveryDateConfirmedAt": {
      "type": "datetime"
    },
    "deliveryDateApprovedBy": {
      "type": "string"
    },
    "deliveryDateApprovedAt": {
      "type": "datetime"
    },
    "deliveryDateNotes": {
      "type": "text"
    },
    "fulfillmentMethod": {
      "type": "enumeration",
      "enum": ["from_stock", "to_be_produced", "mixed"],
      "default": "to_be_produced"
    },
    "quantityFromStock": {
      "type": "decimal",
      "default": 0
    },
    "quantityToBeProduced": {
      "type": "decimal",
      "default": 0
    },
    "shippedQuantity": {
      "type": "decimal",
      "default": 0
    },
    "remainingQuantity": {
      "type": "decimal",
      "default": 0
    },
    "partialShipments": {
      "type": "json",
      "default": []
    },
    "linkedBatches": {
      "type": "json",
      "default": []
    },
    "fulfillmentStatus": {
      "type": "enumeration",
      "enum": ["not_fulfilled", "partially_fulfilled", "fully_fulfilled"],
      "default": "not_fulfilled"
    },
    "fulfillmentNotes": {
      "type": "text"
    }
  }
}
